                       screen-resolution-extra libvdpau1 libatk1.0-0 \
                       libcairo-gobject2 libcairo2 libfontconfig1 \
                       libgdk-pixbuf2.0-0 libgtk-3-0 libgtk2.0-0 libjansson4 \
